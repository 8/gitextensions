<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
  <Fragment>
    <UI>
      <Dialog Id="GitEx_RequiredSoftwareDlg" Width="370" Height="270" Title="!(loc.VerifyReadyDlg_Title)" TrackDiskSpace="yes">
    		<Control Id="Back" Type="PushButton" X="180" Y="243" Width="56" Height="17" Text="!(loc.WixUIBack)" />
      	<Control Id="Next" Type="PushButton" Height="17" Width="56" X="236" Y="243" Text="!(loc.WixUINext)" />
      	<Control Id="Cancel" Type="PushButton" X="304" Y="243" Width="56" Height="17" Cancel="no" Text="!(loc.WixUICancel)">
      		<Publish Event="SpawnDialog" Value="CancelDlg">1</Publish>
      	</Control>

        <Control Id="BannerBitmap" Type="Bitmap" X="0" Y="0" Width="370" Height="44" TabSkip="no" Text="!(loc.InstallDirDlgBannerBitmap)"/>
        <Control Id="BannerLine" Type="Line" X="0" Y="44" Width="370" Height="0"/>
        <Control Id="BottomLine" Type="Line" X="0" Y="234" Width="370" Height="0"/>

        <Control Id="Title" Type="Text" X="15" Y="6" Width="200" Height="15" Transparent="yes" NoPrefix="yes" Text="{\WixUI_Font_Title}Required Software"/>
        <Control Id="Description" Type="Text" X="25" Y="23" Width="280" Height="15" Transparent="yes" NoPrefix="yes" Text="Install the additional software required to run Git Extensions"/>

        <Control Id="msysgit" Type="PushButton" Height="43" Width="345" X="15" Y="92" Text="Install msysgit (1.6.5.1)" />
        <Control Id="KDiff" Type="PushButton" Height="43" Width="345" X="15" Y="147" Text="Install KDiff3 (0.9.95)" />
      </Dialog>
    </UI>
  </Fragment>
</Wix>